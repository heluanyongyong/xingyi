/*版心*/
container()
	width 960px
	margin 0 auto
.container
	container()
/*清除浮动*/
.clear
	clear both
/*隐藏*/
.hide
	display none
/*粗体*/
bold()
	font-weight bold
/*公共表单提示样式*/
public_placehoder()
	/*placehoder属性的默认颜色*/
	::-webkit-input-placeholder
		color #bfbfbf
	:-moz-placeholder
		color #bfbfbf
	::-moz-placeholder
		color #bfbfbf
	:-ms-input-placeholder
		color #bfbfbf
/*按钮默认样式 手的标志*/
button,a
	outline none
	cursor pointer
input
	outline none
input:hover
	border 1px solid #FD8F24
/*登陆界面公共的外层容器*/
public_login_container()
	width 500px
	background #fff
	padding 40px 50px
	border-radius 10px
/*公共的text表单样式*/
.input_text
	width 100%
	height 45px
	border 1px solid rgba(214,214,214,1)
	border-radius 5px
	padding 0 20px
	font-size 16px
	margin 10px 0
/*公共的checkbox表单样式*/
.input_checkbox
	width 20px
	height 20px
	border-radius 3px
/*公用的button橙色的 样式*/
.button_active
	width 100%
	background #FD8F24
	height 50px
	margin 10px 0
	color #FFFEFE
	font-size 18px
/*公共的链接标签 选中样式*/
a.active
	color #FD8F24
/*带有验证码的表单样式左边*/
.middle_input
	border-radius 5px 0 0 5px
	float left
	width 65% !important
/*带有验证码的表单样式右边*/
.middle_button
	border-radius 0 5px 5px 0
	height 45px
	float left
	width 35% !important
	margin 10px 0
	background #fff
	border 1px solid #d6d6d6
	border-left none
	color #FD8F24
	font-size 16px